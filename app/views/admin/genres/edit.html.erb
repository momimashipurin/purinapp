<div class='container'>
  <div class='row my-4'>
    <div class="col">
      <h4 class="d-inline bg-secondary text-white">　ジャンル編集　</h4>
    </div>
  </div>
  <div class='row my-4'>
    <div class="col">
      <%= form_with model: @genre, url: admin_genre_path(@genre), local: true do |f| %>
        <table>
          <tbody>
            <tr>
              <td class="font-weight-bold", style="padding-right: 40px;">
                <label>ジャンル名</label>
              </td>
              <td style="padding-right: 40px;">
                <%= f.text_field :name%>
              </td>
              <td>
                <%= f.submit '変更を保存', class: "btn btn-success", style: "font-weight: bold;" %>
              </td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>