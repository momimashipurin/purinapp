<div class='container'>
  <div class='row my-4'>
    <div class="col">
      <h4 class="d-inline bg-secondary text-white">　ジャンル一覧・追加　</h4>
    </div>
  </div>
  <div class='row my-4'>
    <div class="col">
      <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
        <table>
          <tbody>
            <tr>
              <td class="font-weight-bold", style="padding-right: 40px;">
                <label>ジャンル名</label>
              </td>
              <td style="padding-right: 40px;">
                <%= f.text_field :name, placeholder:"ジャンル名" %>
              </td>
              <td><%= f.submit '新規登録', class: "btn btn-success", style: "font-weight: bold;" %></td>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
  <div class='row my-4'>
    <div class="col-md-4">
      <table class='table'>
        <thead class="thead-light font-weight-bold">
          <tr class="text-center">
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td>
                <%= genre.name %>
              </td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success", style: "font-weight: bold;" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
