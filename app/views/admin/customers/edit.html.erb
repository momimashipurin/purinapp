<!--顧客編集画面　10P-->
<div class="container">
  <div class="row my-3">
    <div>
      <h3><%= @customer.last_name + @customer.first_name %>さんの会員詳細</h3>
    </div>
    <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>
      <table class="table table-borderless form-group">
        <tr>
          <td>会員ID</td>
          <td><%= @customer.id %></td>
          <td></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= f.text_field :last_name, class: 'form-control', autofocus: true %></td>
          <td><%= f.text_field :first_name, class: 'form-control' %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= f.text_field :last_name_kana, class: 'form-control' %></td>
          <td><%= f.text_field :first_name_kana, class: 'form-control' %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= f.text_field :postal_code, class: 'form-control' %></td>
          <td></td>
        </tr>
        <tr>
          <td>住所</td>
          <td colspan="2"><%= f.text_field :address, class: 'form-control' %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= f.text_field :telephone_number, class: 'form-control' %></td>
          <td></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email, class: 'form-control' %></td>
          <td></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
            <%= f.radio_button :is_active, true, checked: @customer.is_active == true %>
            <%= f.label :is_active, '有効' %>
            <%= f.radio_button :is_active, false, checked: @customer.is_active == false %>
            <%= f.label :is_active, '退会' %>
          </td>
        </tr>
      </table>
      <div class="row mb-2">
        <%= f.submit "変更を保存", class: "btn btn-sm btn-success" %>
      </div>
    <% end %>
  </div>
</div>