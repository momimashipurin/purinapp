<div class="container">
  <div class="row justify-content-center pt-3">
<%= render "public/shared/error_messages", resource: @customer %>
  <div class= "row">
  <%= form_with model: @customer ,url: "/customers/information" do |f| %>
    <table class="table table-borderless">
      <th>
        <h2>会員情報編集</h2>
      <th>
      <tr>
        <td><%= f.label :"氏名" %></td>
        <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name"  %>
            <%= f.text_field :first_name, autocomplete: "first_name"  %></td>
      </tr>
      <tr>
        <td><%= f.label :"フリガナ" %></td>
        <td><%= f.text_field :last_name_kana, autocomplete: "last_name_kana"  %>
            <%= f.text_field :first_name_kana, autocomplete: "first_name_kana"  %></td>
      </tr>
      <tr>
        <td><%= f.label :"郵便番号" %></td>
        <td><%= f.text_field :postal_code, autocomplete: "postal_code" %></td>
      </tr>
      <tr>
        <td><%= f.label :"住所" %></td>
        <td><%= f.text_field :address, autocomplete: "address" ,size: "40x20"  %></td>
      </tr>
      <tr>
        <td><%= f.label :"電話番号" %></td>
        <td><%= f.text_field :telephone_number, autocomplete: "telephone_number"  %></td>
      </tr>
      <tr>
        <td><%= f.label :"メールアドレス" %>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>
        <td></td>
        <td><%= f.submit "編集内容を保存", class: "btn btn-success" %>
        <%=link_to "退会する", customers_check_path, class: "btn btn-danger" %></td>
    </table>
  <% end %>
  </div>
</div>
