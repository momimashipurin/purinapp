<div class= "container">
  <div class= "row pt-4">
    <h1>マイページ</h1>
  </div>
  <div class= "row p-2">
    <h4><strong>登録情報　</strong></h4>
    <%= link_to "編集する", customers_information_edit_path, class: "btn btn-success" %>
  </div>
  <div class= "row py-3">
    <table border="1" style="border-collapse: collapse">
      <tr><td class="col-4 p-2">氏名</td><td width="600"><%= current_customer.last_name %>　<%=current_customer.first_name %></td></tr>
      <tr><td class="col-4 p-2">カナ</td><td><%= current_customer.last_name_kana %>　<%=current_customer.first_name_kana %></td></tr>
      <tr><td class="col-4 p-2">郵便番号</td><td><%= current_customer.postal_code %></td></tr>
      <tr><td class="col-4 p-2">住所</td><td><%= current_customer.address %></td></tr>
      <tr><td class="col-4 p-2">電話番号</td><td><%= current_customer.telephone_number %></td></tr>
      <tr><td class="col-4 p-2">メールアドレス</td><td><%= current_customer.email %></td></tr>
    </table>
  </div>
  <div class= "row pt-3">
    <h4><strong>配送先　　</strong></h4>
    <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %>
  </div>
  <div class= "row pt-3">
    <h4><strong>注文履歴　</strong></h4>
    <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
  </div>
</div>
