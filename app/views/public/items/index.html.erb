<div class="container">
  <div class="row">
    <div class="col-3">
       <%= render 'admin/genres/side', genres: @genres %>
    </div>

    <div class="col-9">
      <h2>
        <strong>商品一覧</strong>
        <span style="font-size: 0.8em;">(全<%= @items_all.count %>件)</span>
      </h2>
      <div class="row mt-4">
        <% @items.each do |item| %>
          <div class="col-md-3 mb-4 d-flex align-items-stretch">
            <div class="card w-100">
              <%= link_to item_path(item) do %>
                <p class="img-wrap">
                  <%= image_tag item.get_item_image(200, 200), class: "card-img-top" %>
                </p>
              <% end %>
              <div class="card-body text-center">
                <p class="card-title"><%= item.name %></p>
                <% if item.is_active == true %>
                  <p class="card-text">¥<%= format_price(item.price) %></p>
                <% else %>
                  <p class="card-text text-danger">販売停止中</p>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-center mt-4">
    <%= paginate @items %>
  </div>

</div>